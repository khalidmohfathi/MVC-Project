@model IEnumerable<Department>
@{
	ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />

<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create New Department</a>

@if (Model.Count() > 0)
{
	<table class="table table-hover table-striped mt-4">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(D => D.Code)</th>
				<th>@Html.DisplayNameFor(D => D.Name)</th>
				<th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var dept in Model)
			{
				<tr>
					<td>@dept.Code</td>
					<td>@dept.Name</td>
					<td>@dept.DateOfCreation</td>
					<td>
						<a asp-action="Details" asp-route-id="@dept.Id" class="btn btn-warning">
							<i class="fa-solid fa-eye"></i> Details
						</a>
					</td>
					<td>
						<a asp-action="Update" asp-route-id="@dept.Id" class="btn btn-success">
							<i class="fa-solid fa-edit"></i> Update
						</a>
					</td>
					<td>
						<a asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-danger">
							<i class="fa-solid fa-trash"></i> Delete
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="mt-5 alert alert-danger">
		<h3>There is no departments</h3>
	</div>
}